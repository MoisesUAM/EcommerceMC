@{
    ViewData["Title"] = "Administracion de Marcas";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center text-info fw-bold">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<hr class="text-danger" />
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h3 class="text-center text-primary">Lista de Marcas</h3>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="d-grid gap-2 col-8 mx-auto">
                <a asp-action="Upsert" class="btn btn-outline-primary"><i class="bi bi-patch-check"></i> Agregar Marca</a>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="p-4 rounded bg-transparent">
            <table id="tblBrands" class="table table-responsive-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/BrandFunctions.js"></script>
}


