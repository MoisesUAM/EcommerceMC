@{
    ViewData["Title"] = "Administracion de Productos";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center text-info fw-bold">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<hr class="text-danger" />
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h3 class="text-center text-primary">Lista de Productos</h3>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="d-grid gap-2 col-8 mx-auto">
                <a asp-action="Upsert" class="btn btn-outline-primary"><i class="bi bi-upc-scan"></i> Agregar Producto</a>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="border p-4 rounded bg-light">
            <table id="tblProducts" class="table table-responsive table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Numero de Serie</th>
                        <th>Descripcion</th>
                        <th>Categoria</th>
                        <th>Marca</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ProductFunctions.js"></script>
}



