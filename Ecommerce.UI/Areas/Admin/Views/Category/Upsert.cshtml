@model CategoryModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Administracion de Categorias";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center text-info fw-bold">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<hr class="text-danger" />

<div class="container">
    @if (Model.IdCategory == 0)
    {
        <partial name="Partials/_CreateCategory" model="Model" />
    }
    else
    {
        <partial name="Partials/_UpdateCategory" model="Model" />
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
